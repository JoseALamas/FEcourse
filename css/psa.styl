azul = #22bce0
gris_oscuro = #444
naranja = #DD4F24
body
    background #E8E8E8
    color gris_oscuro
    font-family arial

header
    background gris_oscuro
    color white
    overflow hidden
    padding 0.5em
    position relative

    .logo
        width 75px
        border-right 1px solid azul    
        float left              
        img 
            width 70px
    
    .titular
        margin 0 100px 0 100px

        .filtro
            color azul
            font-size: 14px
            text-decoration: none
            font-weight: bold
            font-style: italic

        .publicar
            background: naranja
            color: white
            float right
            font-style: italic
            margin: -5px 1em 0 0
            padding: 0.2em 0.5em
            text-decoration: none            
            text-shadow: 1px 1px 0px black
            

        .titulo
            font-size 18px
            font-weight normal
            margin 0
            padding 0
    
    .usuario                    
        position absolute        
        
        right 10px
        top 10px      
        
        .avatar
            position relative
            margin  0 1em 0 0
            z-index 2
            img
               width 50px
               border-radius 50%            
        .flechita
            background naranja
            color white
            display block            
            position absolute            
            right 0
            top 15px
            text-align right             
            width 50%
            padding 1px
            z-index 0
            

nav 
    background: azul

    .menu
        height 40px
        line-height 40px
        margin 0
        padding: 0
        overflow-x auto
        white-space nowrap
        

        li
            display inline-block

            a
                color white
                display block
                margin 0 0.5em
                padding 0.2em
                text-decoration none